@{ 
    var account = (Account)ViewBag.Account;
}

<h1>EDITAR CUENTA </h1>

<br />

<div class="row">

    <div class="col-16 offset-3">

        <form action="/account/edit" method="post">

            

            <div class="form-group">

                <input name="Id" value="@account.Id" disabled />
                <label> ID: </label>


            </div>

            <div class="form-group">

                <label>Tipo: </label>
                <select name="Type" class="form-control">
                    @foreach (var item in ViewBag.Types)
                    {
                        if (account.Type == item)
                        {
                            <option value="@item" selected> @item </option>
                        }
                        else
                        {

                            <option value="@item">@item </option>
                        }
                    }

                </select>

            </div>

            <div class="form-group">
                <label>Nombre: </label>
                @Html.ValidationMessage("Name")
                <input class="form-control" name="Name" required="" value="@account.Name" />
            </div>

            <div class="form-group">
                <label>Divisa: </label>
                <select name="Currency" class="form-control">
                    <option value="Soles"> Soles </option>
                </select>

            </div>

            <div class="form-group">
                <label>Saldo Inicial:</label>
                @Html.ValidationMessage("Ammount")
                <input name="Ammount" class="form-control" required value="@account.Ammount" />

            </div>

            <button type="submit" class="btn btn-primary">Guardar</button>


        </form>

    </div>

</div>