
<h1>Lista de Cuentas</h1>

<br />

<a href="/account/create"> Crear Cuenta</a>

<br />
<br />



<table class="table">
    <thead>
        <tr style="border-style:solid">
            <th>Id</th>
            <th>Imagen</th>
            <th>Tipo</th>
            <th>Nombre</th>
            <th>Divisa</th>
            <th>Saldo</th>
            <th></th>
            <th></th>

           
        </tr>
    </thead>

    <tbody>

        @{
            var accounts = ((List<Account>)ViewBag.Accounts);
        }

        @for (var i = 0; i < accounts.Count; i++)
        {
            var item = accounts[i];

            <tr style="border-style:solid">
                <td>@item.Id</td>
                <td></td>
                <td>@item.Type</td>
                <td>@item.Name</td>
                <td>@item.Currency</td>
                <td>S/ @item.Ammount</td>
                <td>
                    <a href="/account/edit?id=@item.Id">Editar</a>
                </td>
                <td>
                    <a href="/account/delete?id=@item.Id">Eliminar</a>
                </td>
            </tr>

        }
    </tbody>

</table>